  div(ng-controller='summary')
    .col-md-4
    .col-md-4
      table.table
        tr
          th
            center Device
          th
            center Connected
          th 
            center Status
          th
            center State
          th
            center Flow Temp
          th
            center Return Temp
          th
            center Comp Speed
          th
            center Defrost Time
        tr(ng-repeat='x in devices2 | orderBy:myOrderBy') 
          td
            a(href='ashp/{{x.device}}') {{x.device}}
          td {{x.connected}}
          td {{x.status}}
